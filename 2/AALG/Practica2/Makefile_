#-----------------------
# IMPORTANTE: Los valores de los parametros de los ejercicio?_test deben ajustarse.
# Se asume que los ficheros fuente se llaman ejercicio1.c, ejercicio2.c,...,ordenar.h
#-----------------------

CC = gcc -ansi -pedantic
CFLAGS = -Wall
EXE = ejercicio1 ejercicio2 ejercicio3 ejercicio4 ejercicio5 ejercicio6

all : $(EXE)

.PHONY : clean
clean :
	rm -f *.o core $(EXE)

$(EXE) : % : %.o ordenacion.o tiempos.o permutaciones.o
	@echo "#---------------------------"
	@echo "# Generando $@ "
	@echo "# Depende de $^"
	@echo "# Ha cambiado $<"
	$(CC) $(CFLAGS) -o $@ $@.o ordenacion.o tiempos.o permutaciones.o

permutaciones.o : permutaciones.c permutaciones.h
	@echo "#---------------------------"
	@echo "# Generando $@"
	@echo "# Depende de $^"
	@echo "# Ha cambiado $<"
	$(CC) $(CFLAGS) -c $<

 ordenacion.o : ordenacion.c ordenacion.h
	@echo "#---------------------------"
	@echo "# Generando $@"
	@echo "# Depende de $^"
	@echo "# Ha cambiado $<"
	$(CC) $(CFLAGS) -c $<

 tiempos.o : tiempos.c tiempos.h
	@echo "#---------------------------"
	@echo "# Generando $@"
	@echo "# Depende de $^"
	@echo "# Ha cambiado $<"
	$(CC) $(CFLAGS) -c $<

ejercicio1_test:
	@echo Ejecutando ejercicio1
	@./ejercicio1 -limInf 10 -limSup 19 -numN 10000|sort|uniq -c

ejercicio2_test:
	@echo Ejecutando ejercicio2
	@./ejercicio2 -tamanio 10 -numP 5

ejercicio3_test:
	@echo Ejecutando ejercicio3
	@./ejercicio3 -tamanio 10 -numP 5

ejercicio4_test:
	@echo Ejecutando ejercicio4
	@./ejercicio4 -tamanio 10

ejercicio5_test:
	@echo Ejecutando ejercicio5
	@./ejercicio5 -num_min 1 -num_max 100 -incr 5 -numP 100 -fichSalida ejercicio5.log

val_ejercicio5_test:
		@echo Ejecutando ejercicio5
		@ valgrind --leak-check=yes --tool=memcheck ./ejercicio5 -num_min 100 -num_max 1000 -incr 10 -numP 100 -fichSalida ejercicio5.log

ejercicio6_test:
	@echo Ejecutando ejercicio6
	@./ejercicio6 -num_min 1 -num_max 100 -incr 5 -numP 100 -fichSalida ejercicio6.log

val_ejercicio6_test:
		@echo Ejecutando ejercicio6
		@ valgrind --leak-check=yes --tool=memcheck ./ejercicio6 -num_min 100 -num_max 1000 -incr 10 -numP 100 -fichSalida ejercicio6.log
